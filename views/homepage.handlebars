{{#each posts as |post| }}
<div class="col-10 post-card">
  <div class="card">
    <div class="card-header">
      <a href="/user/{{post.user.id}}">{{post.user.name}}</a><span> - {{format_date post.date_created}}</span>
    </div>
    <div class="card-body">
      <a href="/post/{{post.id}}">
        <h5 class="card-title">{{post.title}} - </h5>
      </a>
      <p>{{post.content}}</p>
    </div>
  </div>
</div>
{{/each}}