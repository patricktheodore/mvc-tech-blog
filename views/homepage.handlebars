{{#each posts as |post| }}
<div class="card">
  <div class="card-header">
    <a href="/user/{{post.user.id}}">{{post.user.name}}</a><span> - {{format_date post.date_created}}</span>
  </div>
  <div class="card-body">
    <a href="/post/{{post.id}}"><h5 class="card-title">{{post.title}}</h5></a>
  </div>
</div>
{{/each}}