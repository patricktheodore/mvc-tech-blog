<div class="card">
  <div class="card-header">
    <a href="/user/{{user.id}}">{{user.name}}</a><span> - #{{id}}</span>
  </div>
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{content}}</p>
    <blockquote class="blockquote mb-0">
      <footer class="blockquote-footer"><cite title="Date Created">{{format_date date_created}}</cite></footer>
    </blockquote>
  </div>
</div>